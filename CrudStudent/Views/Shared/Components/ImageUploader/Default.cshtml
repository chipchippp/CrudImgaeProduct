@model string
<div class="form-group">
    <label asp-for="@Model" class="control-label"></label>
    <div class="custom-file">
        <input asp-for="@Model" type="file" name="@Model" class="custom-file-input" id="@Model-Image"
               onchange=" document.getElementById('@Model-ImagePrv').src = window.URL.createObjectURL(this.files[0])" />
        <label class="custom-file-label" for="FLFrontImage">Choose file</label>
        
    </div>
    @* <span asp-validation-for="@Model" class="text-danger"></span> *@
    <label id="@Model-size" class="control-label">Size</label>

    @Html.ValidationMessage(Model, new{id = "testId", @class = "text-danger"})
 
    <img id="@Model-ImagePrv" src="~/images/noimage.png" alt="Logo" width="150" height="150" 
    style="border:1px; margin-top:20px; margin-left:120px" />
</div>

